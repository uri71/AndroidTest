<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:padding="4dp">
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/etTop"
        android:hint="@string/etTop"
        android:padding="4dp">
        <requestFocus/>
    </EditText>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/etBot"
        android:hint="@string/etBot"
        android:padding="4dp">
    </EditText>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/btnPress"
        android:text="@string/press"
        android:padding="4dp">
    </Button>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/tv"
        android:padding="4dp">
    </TextView>>
</LinearLayout>